---
import Header from "@modules/header/header.tsx";
import Footer from "@modules/footer/footer.tsx";

interface Props {
  title: string;
}

const { title } = Astro.props;

import "bootstrap/dist/css/bootstrap.min.css";
import "@styles/styles.scss";
import { Container } from "react-bootstrap";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="main-layout">
      <Header />
      <Container className="main-layout__content">
        <slot />
      </Container>
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  .main-layout {
    min-height: 100vh;
    position: relative;
    display: flex;
  }

  .main-layout nav {
    position: absolute;
    top: 0;
    width: 100%;
    z-index: 1;
  }

  .main-layout .main-layout__content {
    padding-top: 86px;
    padding-bottom: 87px;
  }

  .main-layout footer {
    position: absolute;
    bottom: 0;
    width: 100%;
    z-index: 1;
  }
</style>
